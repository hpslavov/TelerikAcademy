extends ../shared/layout

block main-content
    form(method="post")
        label(for="email") E-mail
        input(id="email" class="form-control" value="#{user.email}" type="email" name="email" placeholder="E-mail")
        br
        label(for="password") New Password
        input(id="password" class="form-control" value="#{user.password}" type="password" name="password" placeholder="Password")
        br
        label(for="confirm-password") Confirm New Password
        input(id="confirm-password" class="form-control" value="#{user.password}" type="password" name="confirmPassword" placeholder="Confirm password")
        br
        label(for="first-name") First Name
        input(id="first-name" class="form-control" value="#{user.firstName}" type="text" name="firstName" placeholder="First Name")
        br
        label(for="last-name") Last Name
        input(id="last-name" class="form-control" value="#{user.lastName}" type="text" name="lastName" placeholder="Last Name")
        br
        label(for="profile-img") Avatar Url
        input(id="profile-img" class="form-control" value="#{user.avatar}" type="text" name="avatar" placeholder="Avatar URL")
        br
        input(type="submit" class="btn btn-lg" value="Edit")