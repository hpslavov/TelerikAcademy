//- views/user-details.jade
extends ../shared/layout

block main-content
    h1= user.username + '`s profile'
    h2 Profile picture:
        div.media
            .media-left
                a
                    if user.avatar
                        img.media-object(src=user.avatar)
                    else
                        img.media-object(src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcSOZaUM6BOJZ7jYZd2TLAikkxzjcZjPvF4OBVznA0YpIO4aDEP1")

    h2= 'Email: ' + user.email
    h2= 'Firstname: ' + user.firstName
    h2= 'Lastname: ' + user.lastName
    h2= 'Playlists:'
        ul
            each pl in user.playlists
                li.list-unstyled #{pl.title}
                    a(href="/playlist/"+pl._id)      View & Edit

    a(href="/profile/edit" class="btn.btn-danger" value="Edit") Edit
